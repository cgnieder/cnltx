  \edef#1##1{%
    \noexpand\expandafter
    \expandonce{\csname @\cnltx@stripbs#1\endcsname}%
    \noexpand\csname c@##1\noexpand\endcsname
  }%
  \csdef{@\cnltx@stripbs#1}##1{#2}%
}

