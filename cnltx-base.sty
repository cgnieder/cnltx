  \ifstrequal{#4}{Error}
    {%
      \lowercase{\csdef{#2@#4}}##1{%
        \csuse{#1#4}{#3}{##1}{#5}}%
    }{%
      \lowercase{\csdef{#2@#4}}##1{%
        \csuse{#1#4}{#3}{##1}}%
