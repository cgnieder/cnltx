\newcommand*\cnltx@example@start[1]{%
  \pgfqkeys{/cnltx}{#1}%
  \lstset{style=cnltx}%
  \mdframed[style=cnltx]%
  \ifboolexpr{ bool {cnltx@sidebyside} and not bool {cnltx@codeonly} }
    {\setbox\cnltx@example@box=\hbox\bgroup}{\cnltx@pre@source@hook}%
    \lst@BeginAlsoWriteFile{\jobname.tmp}%
}

\newcommand\cnltx@example@end{%
    \lst@EndWriteFile
  \ifboolexpr{ bool {cnltx@sidebyside} and not bool {cnltx@codeonly} }
    {\egroup}{\cnltx@after@source@hook}%
  \ifbool{cnltx@codeonly}
    {}
    {%
      \ifbool{cnltx@sidebyside}
        {%
          \ifbool{cnltx@codeleft}
            {%
              \minipage[c]{%
                \dimexpr
                  .49\linewidth
                  -.75\lst@xleftmargin
                \relax
              }%
                \cnltx@pre@source@hook
                \unhbox\cnltx@example@box
                \cnltx@after@source@hook
              \endminipage\hfill
              \minipage[c]{%
                \dimexpr
                  .49\linewidth
                  -.75\lst@xleftmargin
                \relax
              }%
                \cnltx@pre@example@hook
                \cnltx@example@input
                \cnltx@after@example@hook
              \endminipage
            }
            {%
              \minipage[c]{%
                \dimexpr
                  .49\linewidth
                  -.75\lst@xleftmargin
                \relax
              }%
                \cnltx@pre@example@hook
                \cnltx@example@input
                \cnltx@after@example@hook
              \endminipage\hfill
              \minipage[c]{%
                \dimexpr
                  .49\linewidth
                  -.75\lst@xleftmargin
                \relax
              }%
                \cnltx@pre@source@hook
                \unhbox\cnltx@example@box
                \cnltx@after@source@hook
              \endminipage
            }%
        }
        {%
          \par\noindent\cnltx@examplesep
          \cnltx@pre@example@hook
          \cnltx@example@input
          \cnltx@after@example@hook
        }%
    }%
  \endmdframed
  \ignorespacesafterend
}

