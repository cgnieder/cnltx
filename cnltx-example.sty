  moretexcs        = [3]
    {
      center,
      description,document,
      enumerate,
      figure,flushleft,flushright,
      itemize,
      labeling,
      otherlanguage,
      table,tabu,tabular
    },
  index            = [3][texcs3],
  indexstyle       = [3]\@gobble,
  % control sequences:
  texcsstyle       = [4]\color{cs},
  index            = [4][texcs4],
  indexstyle       = [4]\@gobble ,
